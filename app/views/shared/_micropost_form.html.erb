<% if @micropost.errors.any? %>
	<div id="error_explanation">
		<ul>
		<% @micropost.errors.full_messages.each do |msg| %>
		<li><%= msg %></li>
		<% end %>
		</ul>
		</div>
<% end %>

<%= form_for @micropost do |f| %>

<div class="field">
<%= f.text_area :content %>
</div>
<div class="actions">
<%= f.submit "Submit" %>
</div>
<% end %>